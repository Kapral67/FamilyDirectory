<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>

    <repositories>
        <repository>
            <id>familydirectory-ddb-assets</id>
            <url>file://${project.basedir}/../assets/familydirectory-ddb-assets/.mvn</url>
        </repository>
        <repository>
            <id>familydirectory-lambda-assets</id>
            <url>file://${project.basedir}/../assets/familydirectory-lambda-assets/.mvn</url>
        </repository>
        <repository>
            <id>familydirectory-domain-assets</id>
            <url>file://${project.basedir}/../assets/familydirectory-domain-assets/.mvn</url>
        </repository>
    </repositories>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <cdk.version>2.99.0</cdk.version>
        <cdk-alpha.version>${cdk.version}-alpha.0</cdk-alpha.version>
        <constructs.version>10.2.70</constructs.version>
        <junit.version>5.10.0</junit.version>
    </properties>

    <groupId>org.familydirectory.cdk</groupId>
    <artifactId>familydirectory-cdk</artifactId>
    <version>0.1</version>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <mainClass>org.familydirectory.cdk.FamilyDirectoryCdkApp</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- AWS Cloud Development Kit -->
        <dependency>
            <groupId>software.amazon.awscdk</groupId>
            <artifactId>aws-cdk-lib</artifactId>
            <version>${cdk.version}</version>
        </dependency>

        <dependency>
            <groupId>software.constructs</groupId>
            <artifactId>constructs</artifactId>
            <version>${constructs.version}</version>
        </dependency>

        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.familydirectory.assets.ddb</groupId>
            <artifactId>familydirectory-ddb-assets</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.familydirectory.assets.lambda</groupId>
            <artifactId>familydirectory-lambda-assets</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.familydirectory.assets.domain</groupId>
            <artifactId>familydirectory-domain-assets</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Unstable Dependencies -->

        <dependency>
            <groupId>software.amazon.awscdk</groupId>
            <artifactId>apigatewayv2-alpha</artifactId>
            <version>${cdk-alpha.version}</version>
        </dependency>

        <dependency>
            <groupId>software.amazon.awscdk</groupId>
            <artifactId>apigatewayv2-integrations-alpha</artifactId>
            <version>${cdk-alpha.version}</version>
        </dependency>

    </dependencies>
</project>
